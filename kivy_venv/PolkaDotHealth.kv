#:kivy 1.0.9
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

# Screen Manager
# The base manager of the app, handles the screens
ScreenManager:
    id: screen_manager
    canvas.before:
        Color:
            rgba: 255.0/255, 138.0/255, 150.0/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    HomeScreen:
        id: home_screen
        name: 'home'
        manager: 'screen_manager'
    HowToScreen:
        id: howto_screen
        name: 'howto'
        manager: 'screen_manager'
    TestScreen:
        id: test_screen
        name: 'test'
        manager: 'screen_manager'
    ActiveTestScreen:
        id: active_test_screen
        name: 'active_test'
        manager: 'screen_manager'
    FinishedTestScreen:
        id: finished_test_screen
        name: 'finished'
        manager: 'screen_manager'    
    ClinicsScreen:
        id: nearby_clinics_screen
        name: 'clinics'
        manager: 'screen_manager'

