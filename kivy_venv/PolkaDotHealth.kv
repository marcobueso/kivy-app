            pos_hint: {"x":0.6, "top":0.95} 
            font_size: "30sp"
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'
        
    