<SerialButton>:
    Button:
        id: button
        pos: 430/2 - 430*0.4/2 , 700*0.19
        size: 430*0.4, 700*0.1
        background_normal: ''
        background_color: [1,64/255,83/255,1]
        text:"Connect to Bra\n  (Serial Port)"
        font_size: "18sp"
        on_press:
            root.connectSerial()
            root.turnOn()
            app.root.transition.direction = 'left'
            app.root.current = 'test'

# How-To Video Screen
<HowToScreen>:


# Test Screen before entering active test
<TestScreen>:
    FloatLayout:
        Image:
            source: 'new_logo.png'
            size: self.texture_size
            size_hint: 0.7 * 0.85 , 0.2 * 0.85
            pos_hint: {"x":0.3, "top":1} 
        Image:
            source: 'user.png'
            size_hint: 0.15, 0.15
            pos_hint: {"x":0.035, "top":1} 
        Image:
            source: 'icon_bra2.png'
            size: self.texture_size
            size_hint: 0.4, 0.4
            pos_hint: {"x":0.03, "top":0.85} 
        Label:
            id: "connected_label"
            text: "Connected"
            pos: 60, 100
            font_size: "37sp"
        Label:
            id: "connected2_label"
            text: "B01-001"
            pos: 30, 70
            font_size: "30sp"
        Button:
            text: 'Start Test'
            font_size: "20sp"
            background_normal: ''
            background_color: [1,64/255,83/255,1]
            pos_hint: {"x":0.3, "top":0.5} 
            size_hint: 0.4, 0.1
            on_press:
                app.root.transition = NoTransition()
                app.root.current = 'active_test'
                app.root.transition = SlideTransition()
        Button:
            text: 'Nearby Clinics'
            font_size: "20sp"
            background_normal: ''
            background_color: [1,64/255,83/255,1]
            pos_hint: {"x":0.3, "top":0.38} 
            size_hint: 0.4, 0.1
            on_press:
                app.root.transition.direction = 'left'
                app.root.current = 'clinics'
        Button:
            text: 'My Journal'
            font_size: "20sp"
            background_normal: ''
            background_color: [1,64/255,83/255,1]
            pos_hint: {"x":0.3, "top":0.26} 
            size_hint: 0.4, 0.1
        Button:
            text: 'Back'
            font_size: "18sp"
            background_normal: ''
            background_color: [1,64/255,83/255,1]
            pos_hint: {"x":0.78, "top":0.11} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'
        
# Active Test Screen
# Test simulation
<ActiveTestScreen>:
    BoxLayout:
        canvas:
            Color:
                rgb: 250.0/255, 150.0/255, 128.0/255
            Rectangle:
                size: self.size
        name: 'box'
        Button:
            text: 'Stop Test'
            background_color: 1, 131.0/255, 164.0/255, 0.1
            pos_hint: {"x":0.4, "top":0.2} 
            size_hint: 0.2, 0.2
            on_press:
                root.stopTest()
                app.root.transition = SlideTransition()
                app.root.current = 'finished'
                app.root.transition = SlideTransition()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'



