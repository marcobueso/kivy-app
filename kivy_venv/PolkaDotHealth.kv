#:kivy 1.0.9
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

# Screen Manager
# The base manager of the app, handles the screens
ScreenManager:
    id: screen_manager
    canvas.before:
        Color:
            rgba: 250.0/255, 138.0/255, 150.0/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    HomeScreen:
        id: home_screen
        name: 'home'
        manager: 'screen_manager'
    TestScreen:
        id: test_screen
        name: 'test'
        manager: 'screen_manager'
    ActiveTestScreen:
        id: active_test_screen
        name: 'active_test'
        manager: 'screen_manager'

# Home screen and "Connect Serial" button
<HomeScreen>:
    Label:
        id: "title_label"
        text: "Polka Dot Health"
        pos: 0, 150
        font_size: "30sp"
    BoxLayout:
        SerialButton:
<SerialButton>:
    Button:
        id: button
        pos: 300, 250
        size: 200, 35
        text:"Connect to Serial Port"
        on_press:
            root.connectSerial()
            root.turnOn()
            app.root.transition.direction = 'left'
            app.root.current = 'test'

# Test Screen before entering active test
<TestScreen>:
    FloatLayout:
        Button:
            text: 'Start Test'
            background_color: 1, 131.0/255, 164.0/255, 0.5
            pos_hint: {"x":0.4, "top":0.2} 
            size_hint: 0.25, 0.2
            on_press:
                app.root.transition = NoTransition()
                app.root.current = 'active_test'
                app.root.transition = SlideTransition()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'

# Active Test Screen
# Test simulation
<ActiveTestScreen>:
    BoxLayout:
        canvas:
            Color:
                rgb: 250.0/255, 150.0/255, 128.0/255
            Rectangle:
                size: self.size
        name: 'box'
        Button:
            text: 'Stop Test'
            background_color: 1, 131.0/255, 164.0/255, 0.1
            pos_hint: {"x":0.4, "top":0.2} 
            size_hint: 0.2, 0.2
            on_press:
                app.root.transition = NoTransition()
                app.root.current = 'test'
                app.root.transition = SlideTransition()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'