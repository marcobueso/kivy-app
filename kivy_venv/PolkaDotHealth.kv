#:kivy 1.0.9
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

# Screen Manager
# The base manager of the app, handles the screens
ScreenManager:
    id: screen_manager
    canvas.before:
        Color:
            rgba: 255.0/255, 138.0/255, 150.0/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    HomeScreen:
        id: home_screen
        name: 'home'
        manager: 'screen_manager'
    TestScreen:
        id: test_screen
        name: 'test'
        manager: 'screen_manager'
    ActiveTestScreen:
        id: active_test_screen
        name: 'active_test'
        manager: 'screen_manager'
    FinishedTestScreen:
        id: finished_test_screen
        name: 'finished'
        manager: 'screen_manager'    
    ClinicsScreen:
        id: nearby_clinics_screen
        name: 'clinics'
        manager: 'screen_manager'

# Home screen and "Connect Serial" button
<HomeScreen>:
    Label:
        id: "title_label"
        text: "Polka Dot Health"
        pos: 0, 190
        font_size: "30sp"
    Image:
        source: 'logo.png'
        size: self.texture_size
        pos_hint: {"x":0.01, "top":1} 
    BoxLayout:
        SerialButton:
<SerialButton>:
    Button:
        id: button
        pos: 300, 100
        size: 200, 35
        text:"Connect to Serial Port"
        on_press:
            root.connectSerial()
            root.turnOn()
            app.root.transition.direction = 'left'
            app.root.current = 'test'

# Test Screen before entering active test
<TestScreen>:
    FloatLayout:
        Image:
            source: 'logo.png'
            size: self.texture_size
            pos_hint: {"x":0.01, "top":1} 
        Button:
            text: 'Start Test'
            background_color: 1, 131.0/255, 164.0/255, 0.5
            pos_hint: {"x":0.2, "top":0.2} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition = NoTransition()
                app.root.current = 'active_test'
                app.root.transition = SlideTransition()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.45, "top":0.2} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'
        Button:
            text: 'Nearby Clinics'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.75, "top":0.2} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'left'
                app.root.current = 'clinics'
# Active Test Screen
# Test simulation
<ActiveTestScreen>:
    BoxLayout:
        canvas:
            Color:
                rgb: 250.0/255, 150.0/255, 128.0/255
            Rectangle:
                size: self.size
        name: 'box'
        Button:
            text: 'Stop Test'
            background_color: 1, 131.0/255, 164.0/255, 0.1
            pos_hint: {"x":0.4, "top":0.2} 
            size_hint: 0.2, 0.2
            on_press:
                root.stopTest()
                app.root.transition = SlideTransition()
                app.root.current = 'finished'
                app.root.transition = SlideTransition()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'



# Nearby Clinics Screen
<ClinicsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgba: 230.0/255, 131.0/255, 150.0/255, 0.6
            Rectangle:
                size: 600, 115
                pos: 90, 70

        Image:
            source: 'map.png'
            #size: self.texture_size
            size_hint: 0.94, 0.55
            pos_hint: {"x":0.02, "top":0.90} 
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.75, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'test'
        Label:
            id: "clinics_label"
            text: "Nearby Clinics"
            pos_hint: {"x":0.4, "top":0.97} 
            size_hint: 0.2, 0.03
            font_size: "30sp"
        Label:
            id: "example_clinic_name_label"
            color: 0, 0, 1, 1
            text: '[Example Clinic]'
            pos_hint: {"x":0.12, "top":0.30} 
            size_hint: 0.2, 0.03
            font_size: "18sp"
        Label:
            id: "example_clinic_address_label"
            #color: 0, 0, 1, 1
            text: 'Address Line 123 \nCollege Station, TX 77840\n(979) 555-5555'
            pos_hint: {"x":0.16, "top":0.23} 
            size_hint: 0.2, 0.03
            font_size: "16sp"
        
# Finished Test Screen
<FinishedTestScreen>:
    BoxLayout:
        Label:
            id: "title_label"
            text: "Summary"
            pos_hint: {"x":0.6, "top":0.95} 
            font_size: "30sp"
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'
        
    