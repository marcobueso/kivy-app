<SerialButton>:
    Button:
        id: button
        pos: 300, 250
        size: 200, 35
        text:"Connect to Serial Port"
        on_press:
            root.connectSerial()
            root.turnOn()
            app.root.transition.direction = 'left'
            app.root.current = 'test'



<TestScreen>:
    FloatLayout:
        Button:
            text: 'Start Test'
            background_color: 1, 131.0/255, 164.0/255, 0.5
            pos_hint: {"x":0.4, "top":0.2} 
            size_hint: 0.25, 0.2
            on_press:
                app.root.transition = NoTransition()
                app.root.current = 'active_test'
                app.root.transition = SlideTransition()
                #root.startTest()
        Button:
            text: 'Back to home'
            background_color: 1, 131.0/255, 164.0/255, 0.7
            pos_hint: {"x":0.7, "top":0.1} 
            size_hint: 0.2, 0.1
            on_press:
                app.root.transition.direction = 'right'
                app.root.current = 'home'
