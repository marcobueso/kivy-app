#:kivy 1.0.9

ScreenManager:
    id: screen_manager
    canvas.before:
        Color:
            rgba: 250.0/255, 138.0/255, 150.0/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    #transition: FadeTransition()
    HomeScreen:
        id: home_screen
        name: 'home'
        manager: 'screen_manager'
    TestScreen:
        id: test_screen
        name: 'test'
        manager: 'screen_manager'
    
